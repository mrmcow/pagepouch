{
  "name": "@pagepouch/extension",
  "version": "0.1.0",
  "private": true,
  "description": "PagePouch Browser Extension - Capture web content with one click",
  "scripts": {
    "dev": "webpack --config webpack.config.js --mode development --watch",
    "dev:firefox": "webpack --config webpack.firefox.config.js --mode development --watch",
    "build": "webpack --config webpack.config.js --mode production",
    "build:chrome": "webpack --config webpack.config.js --mode production",
    "build:firefox": "webpack --config webpack.firefox.config.js --mode production",
    "build:all": "npm run build:chrome && npm run build:firefox",
    "build:store": "node scripts/build-for-store.js",
    "build:download": "node scripts/create-downloadable.js",
    "build:download:chrome": "node scripts/create-downloadable.js chrome",
    "build:download:firefox": "node scripts/create-downloadable.js firefox",
    "build:download:all": "npm run build:download:chrome && npm run build:download:firefox",
    "clean": "rm -rf dist dist-firefox build",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "@pagepouch/shared": "*",
    "@supabase/supabase-js": "^2.57.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.4",
    "postcss-loader": "^8.2.0",
    "process": "^0.11.10",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.0.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4"
  }
}
